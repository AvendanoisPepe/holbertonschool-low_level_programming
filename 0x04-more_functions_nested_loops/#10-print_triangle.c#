#include "main.h"
/**

*/
void print_triangle(int size)
{
	if (size <= 0)
	{
		_putchar('\n');
	}
	else
	{
		int contador1 = 1;
		int contador2 = 1;

		while (contador1 <= size)
		{
			contador2 = 0;
			while (contador2 <= size)
			{
				_putchar(' ');
				contador2++;
			}

			for (contador2 = 1; contador2 <= contador1; contador1++)
			{
				_putchar('#');
			}

			_putchar('\n');
			contador1++;
		}
	}
}
